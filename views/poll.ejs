<!DOCTYPE html>
<html>
  <head>
    <title><%= QuestionText %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <h1 class="mt-3"><%= QuestionText %></h1>
      <div class="text-end">
        <a class="btn btn-primary" href="/">Home</a>
      </div>
      <hr>
      <div id="a-area" class="mb-3">
        <%- include("partials/bars", Answers, QuestionID, Voted, Total) %> 
      </div>
      <p id="total-votes">Total Votes: <%= (Voted) ? Total : '~' %> </p>
      <p id="error-text" class="text-danger"></p>

      <p class="<%= (Voted)?'d-none':'' %>" id="warning-text">Note: Viewing the result will prevent you from voting!</p>
      <a id="view-results" class="btn btn-primary <%= (Voted)?'disabled':'' %>" data-id="<%= QuestionID %>">View results</a>
    </div>

    <script>var voted = <%= (Voted) ? true : false %>;</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.js"></script>
    <script src="/javascripts/poll.js"></script>
  </body>
</html>
