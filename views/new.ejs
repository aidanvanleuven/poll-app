<!DOCTYPE html>
<html>
  <head>
    <title>New Poll</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <h1 class="mt-3">New Poll</h1>
      <div class="text-end">
        <a class="btn btn-primary" href="/">Home</a>
      </div>
      <hr>

      <form>
        <div class="mb-3">
          <label for="q1" class="form-label">Poll question:</label>
          <input type="text" class="form-control" id="question" placeholder="Enter a poll question here">
        </div>
        <div id="a-area">
          <div class="mb-3">
            <label for="a1" class="form-label">Answer 1</label>
            <input type="text" class="form-control answer" id="a1" required>
          </div>
          <div class="mb-3">
            <label for="a2" class="form-label">Answer 2</label>
            <input type="text" class="form-control answer" id="a2" required>
          </div>
        </div>

        <div class="text-end">
          <p class="text-danger" id="error-text"></p>
          <a class="btn btn-outline-primary d-none" id="less-button">Less answers</a>
          <a class="btn btn-outline-primary" id="more-button">More answers</a>
          <button type="submit" class="btn btn-primary" id="submit">Submit</button>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="/javascripts/new.js"></script>
  </body>
</html>
